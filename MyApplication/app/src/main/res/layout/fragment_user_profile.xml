<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Username -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:textColor="@color/primary_blue_dark" />

        <TextView
            android:id="@+id/tvAchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Achievements"
            android:textColor="@color/primary_blue" />

        <!-- Badge: City Explorer -->
        <androidx.cardview.widget.CardView
            android:id="@+id/blockBadgeCities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_border">

                <ImageView
                    android:id="@+id/iconBadgeCities"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_badge_white"
                    android:contentDescription="@drawable/ic_badge_white" />

                <TextView
                    android:id="@+id/countTextViewCities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Badge: World Traveler -->
        <androidx.cardview.widget.CardView
            android:id="@+id/blockBadgeCountries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_border">

                <ImageView
                    android:id="@+id/iconBadgeCountries"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_badge_white"
                    android:contentDescription="@drawable/ic_badge_white" />

                <TextView
                    android:id="@+id/countTextViewCountries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Badge: Measurement Master -->
        <androidx.cardview.widget.CardView
            android:id="@+id/blockBadgeRegistrations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_border">

                <ImageView
                    android:id="@+id/iconBadgeRegistrations"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_badge_white"
                    android:contentDescription="@drawable/ic_badge_white" />

                <TextView
                    android:id="@+id/countTextViewRegistered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvStatsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Statistics"
            android:textColor="@color/primary_blue" />

        <!-- High Exposure -->
        <androidx.cardview.widget.CardView
            android:id="@+id/blockExpositionToHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_border_2">

                <ImageView
                    android:id="@+id/iconExpositionHigh"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_danger"
                    android:contentDescription="@drawable/ic_danger" />

                <TextView
                    android:id="@+id/textExpositionHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Low Exposure -->
        <androidx.cardview.widget.CardView
            android:id="@+id/blockExpositionToLow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_border_3">

                <ImageView
                    android:id="@+id/iconExpositionLow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_ok"
                    android:contentDescription="@drawable/ic_ok" />

                <TextView
                    android:id="@+id/textExpositionLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnEditCompensation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify Compensation Factor"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/primary_blue"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
